# Core API keys
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...

# Gateway (client)
EDGAR_GATEWAY_URL=http://localhost:8000
EDGAR_GATEWAY_TIMEOUT=300

# Personas (model selection)
EDGAR_GOAL_SETTER_MODEL=gpt-4-turbo-preview
EDGAR_SCHEMA_DESIGNER_MODEL=gpt-4-turbo-preview
EDGAR_EXTRACTOR_MODEL=gpt-4-turbo-preview
EDGAR_CRITIC_MODEL=gpt-4-turbo-preview
EDGAR_TUTOR_MODEL=gpt-4-turbo-preview

# Features
EDGAR_ENABLE_ADVERSARIAL_TESTING=false
EDGAR_ENABLE_BACK_CORRECTION=false
EDGAR_ENABLE_SCHEMA_EVOLUTION=true

# Storage
EDGAR_DATA_DIR=data
EDGAR_MEMORY_BACKEND=filesystem

# Gateway (server)
EDGAR_GATEWAY_HOST=0.0.0.0
EDGAR_GATEWAY_PORT=8000
EDGAR_GATEWAY_MAX_RETRIES=3
EDGAR_GATEWAY_RETRY_DELAY=1000
EDGAR_GATEWAY_RETRY_MAX_DELAY=60000
EDGAR_GATEWAY_LOG_LEVEL=INFO
EDGAR_GATEWAY_RECORD_SESSIONS=false
EDGAR_GATEWAY_SESSION_DIR=data/sessions
EDGAR_GATEWAY_CACHE_ENABLED=true
EDGAR_GATEWAY_CACHE_DIR=data/gateway_cache
EDGAR_GATEWAY_MAX_REQUEST_SIZE_MB=10
EDGAR_GATEWAY_REQUEST_TIMEOUT=300
EDGAR_GATEWAY_ENABLE_STREAMING=false
EDGAR_GATEWAY_ENABLE_FALLBACK=true

